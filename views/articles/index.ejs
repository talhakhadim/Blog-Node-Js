<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>Blog in Node JS</title>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4">Blog Articles</h1>
      <a href="articles/new" class="btn btn-success">New Articles</a>
      <form action="articles?_method=DELETE" method="post" class="d-inline">
        <button type="submit" class="btn btn-danger">Delete All</button>
      </form>
       

      <% articles.forEach(article=>{%>
      <div class="card mt-4">
        <div class="card-body">
          <h5><div class="card-title"><%= article.title %></div></h5>
          <h6><div class="sub-title text-muted mb-2"><%= article.createdAt.toLocaleDateString() %></div></h6>
         <p> <div class="card-text"><%=article.description %></div></p>
         <div class="container">
           <a href="/articles/new/<%- article.slug %> " class="btn btn-primary">Read More</a>
           <form action="/articles/<%- article.id %>?_method=DELETE " method="POST" class="d-inline">
          <button type="submit" class="btn btn-danger"> Delete</button></form>
           
           <a href="/articles/edit/<%- article.slug %> " class="btn btn-secondary">Edit</a>
         </div>
        </div>
      </div>

      <% }) %>
    </div>
  </body>
</html>
